<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="640.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda_de_contatos.controller.ContatoListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Contatos">
        <font>
            <Font name="System Bold" size="18.0"/>
        </font>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </Label>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" prefWidth="200.0" text="Nome"/>
            <TableColumn fx:id="colTelefone" prefWidth="120.0" text="Telefone"/>
            <TableColumn fx:id="colEmail" prefWidth="150.0" text="Email"/>
            <TableColumn fx:id="colAcoes" minWidth="180.0" text="Ações"/>
        </columns>
    </TableView>
    <Button mnemonicParsing="false" onAction="#handleAdicionarContato" text=" + Novo Contato"/>

    <HBox alignment="CENTER_LEFT" spacing="10"
          style="-fx-border-color: lightgray; -fx-border-width: 1 0 0 0; -fx-padding: 5;">
        <Label fx:id="statusLabel" text="Status: Verificando...">
            <font>
                <Font name="System Italic" size="12.0"/>
            </font>
        </Label>
        <HBox HBox.hgrow="ALWAYS"/>
        <Button fx:id="syncButton" mnemonicParsing="false" onAction="#handleSincronizar" text="Sincronizar"/>
    </HBox>
</VBox>
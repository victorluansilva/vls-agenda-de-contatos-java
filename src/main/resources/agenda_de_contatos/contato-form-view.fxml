<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda_de_contatos.controller.ContatoFormController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="titleLabel" text="Adicionar Novo Contato">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <GridPane hgap="10.0" maxWidth="600.0" vgap="15.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                    <Label text="Nome:" GridPane.rowIndex="0" />
                    <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    <Label text="Telefone:" GridPane.rowIndex="1" />
                    <TextField fx:id="telefoneField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Data de Nascimento:" GridPane.rowIndex="2" />
                    <DatePicker fx:id="dataNascPicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <Label text="Email:" GridPane.rowIndex="3" />
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    <Label text="EndereÃ§o:" GridPane.rowIndex="4" />
                    <TextField fx:id="enderecoField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                </GridPane>
                <Button onAction="#handleSalvar" text="Salvar" />
            </children>
        </VBox>
    </children>
</AnchorPane>
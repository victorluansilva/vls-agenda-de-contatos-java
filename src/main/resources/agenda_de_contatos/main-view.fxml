<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainPane" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda_de_contatos.controller.MainController">
    <left>
        <VBox fx:id="sidebar" prefWidth="250.0" spacing="10.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="sidebar-title" text="Agenda VLS">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="btnContatos" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleShowContatoList" styleClass="sidebar-button" text="Contatos">
                    <graphic>
                        <FontIcon iconLiteral="fas-users" iconSize="20" styleClass="icon" />
                    </graphic>
                </Button>
                <Button fx:id="btnAdicionar" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleShowContatoForm" styleClass="sidebar-button" text="Adicionar Novo">
                    <graphic>
                        <FontIcon iconLiteral="fas-user-plus" iconSize="20" styleClass="icon" />
                    </graphic>
                </Button>
                <VBox VBox.vgrow="ALWAYS" />
                <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" styleClass="sidebar-button" text="Sair">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" iconSize="20" styleClass="icon" />
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentPane" styleClass="content-pane" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </AnchorPane>
    </center>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agenda_de_contatos.controller.ContatoFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="titleLabel" text="Adicionar Novo Contato">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
        <content>
            <GridPane hgap="10.0" vgap="15.0">
                <padding>
                    <Insets right="10.0" />
                </padding>
                <Label text="Nome:" GridPane.rowIndex="0" />
                <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Telefone:" GridPane.rowIndex="1" />
                <TextField fx:id="telefoneField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Data de Nascimento:" GridPane.rowIndex="2" />
                <DatePicker fx:id="dataNascPicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Email:" GridPane.rowIndex="3" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="EndereÃ§o:" GridPane.rowIndex="4" />
                <TextField fx:id="enderecoField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </GridPane>
        </content>
    </ScrollPane>
    <Button onAction="#handleSalvar" text="Salvar" />
</VBox>